@model List<YummyApp.Data.ApplicationUser>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a class="btn btn-success" asp-action="Create">Create Chef</a>
<hr />

@if (TempData["UserCreated"] != null)
{
    <div class="alert alert-success">
        @TempData["UserCreated"]
    </div>
}

@if (TempData["ErrorDeleting"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorDeleting"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                Chef Full Name
            </td>
            <td>
                UserName
            </td>
            <td>
                Email
            </td>
            <td>
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.ImageName" style="width:150px; height:150px; border-radius:50%; object-fit:cover">
                    @item.FullName
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a href="#">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a href="#">Details</a>
                </td>
            </tr>
        }
    </tbody>

</table>
