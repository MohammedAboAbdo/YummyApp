@{
}

<div id="lightgallery">
    @foreach (var item in Model)
    {
        <a href="~/Images/@item.ImageName">
            <img style="max-width:200px; max-height:200px;" alt="img1" src="~/Images/@item.ImageName" />
        </a>
    }
</div>


@section Scripts
{
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.6.1/lightgallery.min.js"></script>
<script type="text/javascript">
    lightGallery(document.getElementById('lightgallery'), {
        //plugins: [lgZoom, lgThumbnail],
        //licenseKey: 'your_license_key',
        speed: 500,
        // ... other settings
    });
</script>

}

@section Styles
{
