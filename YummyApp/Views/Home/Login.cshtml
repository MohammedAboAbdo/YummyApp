@model LoginVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string ReturnUrl = ViewData["ReturnUrl"] as string;
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 style="padding-top:200px; margin-bottom: 20px;">Login Page</h1>
        <form method="post" style=" margin-bottom: 100px;">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="@ReturnUrl" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" class="form-control" asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" asp-for="Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary mt-3" />
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>